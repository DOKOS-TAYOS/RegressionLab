# ============================================================================
# RegressionLab - Mobile / Pydroid 3 Configuration
# ============================================================================
# Copy to .env when using on mobile (e.g. Pydroid 3).
# Values are tuned for small screens and touch: smaller fonts, padding, plots.
#
# Usage: copy this file to .env (setup_mobile.py does this automatically)
# ============================================================================

# ============================================================================
# LANGUAGE CONFIGURATION
# ============================================================================
LANGUAGE="es"

# ============================================================================
# UI THEME CONFIGURATION (mobile-optimized)
# ============================================================================

# Window and widget colors
UI_BACKGROUND="midnight blue"
UI_FOREGROUND="snow"

# Button text colors
UI_BUTTON_FG="lime green"
UI_BUTTON_FG_CANCEL="red2"

# Active (touch/click) colors
UI_ACTIVE_BG="navy"
UI_ACTIVE_FG="snow"

# Border and spacing (reduced for small screens)
UI_BORDER_WIDTH=4
UI_RELIEF="ridge"
UI_PADDING_X=4
UI_PADDING_Y=4

# Button properties (narrower for mobile)
UI_BUTTON_WIDTH=10
UI_BUTTON_WIDTH_WIDE=20

# Font settings (smaller for mobile readability)
UI_FONT_SIZE=12
UI_FONT_SIZE_LARGE=16
UI_FONT_FAMILY="sans-serif"

# Widget sizes
UI_SPINBOX_WIDTH=8
UI_ENTRY_WIDTH=18

# ============================================================================
# PLOT STYLE CONFIGURATION (mobile-optimized)
# ============================================================================

# Figure size (smaller for mobile screens)
PLOT_FIGSIZE_WIDTH=6
PLOT_FIGSIZE_HEIGHT=4
DPI=80

PLOT_SHOW_TITLE=false

# Line and marker
PLOT_LINE_COLOR="black"
PLOT_LINE_WIDTH=1.00
PLOT_LINE_STYLE="-"
PLOT_MARKER_FORMAT="o"
PLOT_MARKER_SIZE=4

PLOT_ERROR_COLOR="crimson"
PLOT_MARKER_FACE_COLOR="crimson"
PLOT_MARKER_EDGE_COLOR="crimson"

# ============================================================================
# FONT CONFIGURATION FOR PLOTS (mobile)
# ============================================================================
FONT_FAMILY="sans-serif"
FONT_TITLE_SIZE="large"
FONT_TITLE_WEIGHT="semibold"
FONT_AXIS_SIZE=18
FONT_AXIS_STYLE="italic"
FONT_TICK_SIZE=12

# ============================================================================
# FILE PATH CONFIGURATION
# ============================================================================
FILE_INPUT_DIR="input"
FILE_OUTPUT_DIR="output"
FILE_FILENAME_TEMPLATE="fit_{}.png"

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL="INFO"

# Log file path
LOG_FILE="regressionlab.log"

# Enable console logging (true/false)
LOG_CONSOLE=true

# Donations URL (optional). If set, a donations button appears at the end of the Help window.
# Example: DONATIONS_URL="https://example.com/donate"
DONATIONS_URL="https://www.youtube.com/@whenphysics"